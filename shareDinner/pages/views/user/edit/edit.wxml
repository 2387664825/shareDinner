<form bindsubmit="submit">
<view class='shop-container'>
    <view class='title'>基本信息</view>
    <view class='cell-group'>
        <view class='cell' >
            <view class='label'>名字：</view>
            <input type='text' placeholder='请输入' name='name' value='{{ user.name }}'></input>
        </view>
        <view class='cell' >
            <view class='label'>性别：</view>
            <input type='text' placeholder='请输入' name='sex' value='{{ user.sex }}'></input>
        </view>
        <view class='cell'>
            <view class='label'>手机号：</view>
            <input type='text' placeholder='请填写手机号' name='telephone' value='{{user.telephone}}' type='phone' ></input>
        </view>
        <view class='cell'  catchtap='onGoWeizhi'>
            <view class='label'>常用地址：</view>
            <input placeholder='请选择常用地址' disabled   name='city' value='{{ user.city }}' ></input>
        </view>
        <view class='cell'>
            <view class='label'>身份证号码：</view>
            <input  type='text' placeholder='请输入' name='idCard' value='{{user.idCard}}'></input>
        </view>
    </view>
</view>
<view class='bottomView'>
    <button class='submit'  formType="submit">保存</button>
</view>
</form>