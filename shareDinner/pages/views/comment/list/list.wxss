@import '/pages/common/common.wxss';
/* 进度条 */
.s_progress{
    margin-top: 30rpx;
    margin-bottom: 10rpx;
    margin-right: 4%;
    border-bottom: 1rpx solid #ededed;
}
.s_progress text{
    width: 20%;
    font-size: 25rpx;
    text-align: right;
}
.s_progress view{
    display: flex;
    height: 1.3em;
}
.s_prg{
    width: 300rpx;
    overflow: hidden;
    /* border-radius: 100px; */
    margin: 0 10px;
}
/* end */
.title {
    margin-top: 30rpx;
    display: flex;
    justify-content: center;
    color: #FFA500;
    font-size: 40rpx;
}
.comment-box{
    padding-bottom: 105rpx;
}
.comment-list{
    position: relative;
    padding:20rpx 20rpx 20rpx 220rpx;
    height: 200rpx;
    border-bottom: 1rpx solid #ededed;
}
.comment-thumb{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.comment-list view{
    line-height: 50rpx;
    font-size:28rpx;
}
.comment-list .name{
    position: absolute;
    left: 120rpx;
}
.comment-list .right{
    position: absolute;
    right: 20rpx;
}
.comment-list .content{
    position: absolute;
    left: 120rpx;
    top:70rpx;
}
.comment-time{
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    color: darkgray;
    font-size: 25rpx;
    height: 55rpx;
    line-height: 50rpx;
}
.orders-btn{
    position: absolute;
    right: 10rpx;
    background-color: #00B2BF;
    font-size: 30rpx;
    height: 55rpx;
    line-height: 50rpx;
    width: 170rpx;
    justify-content: center;
}