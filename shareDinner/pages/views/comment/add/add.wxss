page {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
  }
.shop-container{
    box-sizing: border-box;
    background: #fff;
    margin:20rpx 20rpx 130rpx 20rpx;
    border: 0px solid darkgray;
    border-radius: 20rpx;
}
.title {
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    padding: 20rpx; 
}

.cell-group {
    border-top: 1px solid #ccc;
}
.cell {
    width: 100%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex-direction: row;
}
.label {
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 700;
    /* padding: 0 30rpx;   */
    text-align: right;
}
/* 列合并 */
.cross_column {
    display: flex;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
  }
  
  /* img图片样式 */
  .imagecls {
    width: 50rpx;
    height: 50rpx;
  }
input {
    width: 100%;
    font-size: 28rpx;
    height: 100rpx;
}
textarea{
    width: 80%;
    height: 200rpx;
    font-size: 28rpx;
    line-height: 30rpx;
    background: #fff;
    border: 1px solid #c8c7cc;
    border-radius: 10rpx;
    margin: auto;
    padding: 30rpx;
}

.bottomView{
    width: 100%;
    height: 100rpx;
    left: 0px;
    bottom: 0px;
    position: fixed;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    box-shadow: 1px 1px 100px rgba(0, 0, 0, 0.3);
}
.submit{
    width: 160rpx;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
    font-size: 28rpx;
    padding: 0px;
    margin: auto;
    background-color: #009FE9;
    display: inline-block;
}
