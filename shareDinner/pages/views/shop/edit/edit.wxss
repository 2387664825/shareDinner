page {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
  }
.shop-container{
    box-sizing: border-box;
    background: #fff;
    margin:20rpx 20rpx 130rpx 20rpx;
    border: 0px solid darkgray;
    border-radius: 20rpx;
}
.title {
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    padding: 20rpx; 
}

.cell-group {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    /* background-color: #fff; */
    /* box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3); */
}
.cell {
    width: 80%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex-direction: row;
}
.line{
    width:100%;
    height: 1px;
    right: 0px;
    bottom: 0px;
    background-color: #ccc;
    position: absolute;
}

.label {
    width: 40%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 700;
    padding: 0 30rpx;  
    text-align: right;
}
/* 图片 */
.picture {
    width: 100%;
    overflow: hidden;
    background: #fff;
    border-bottom: 1px solid #ccc;
  }
  .picture .left {
    width: 140rpx;
    font-size: 28rpx;
    font-weight: 700;
    padding-left: 30rpx;
    float: left;
    padding-top: 20rpx;
    text-align: right;
  }
  .picture .right {
    width: 60%;
    float: left;
    box-sizing: border-box;
    padding-top:20rpx;
    padding-bottom:20rpx;
  }
  .picture .right .add {
    width: 120rpx;
    height: 120rpx;
    margin-left: 40rpx;
    margin-top: 40rpx;
    margin-right: 10rpx;
  }
  .According{
    width:200rpx;
    height:200rpx;
    float:left;
    margin-right:10rpx;
    margin-bottom: 10rpx;
  }
  .parcel{
   width:200rpx;
    height:200rpx;
    float:left;
    margin-right:10rpx;
     margin-bottom: 10rpx;
    position: relative;
  }
  .deleteimg{
    width:50rpx;
    height:50rpx;
    position: absolute;
    left:200rpx;
    top:10rpx;
    z-index: 2;
  }
input {
    width: 100%;
    font-size: 28rpx;
    height: 100rpx;
}
textarea{
    width: 80%;
    height: 200rpx;
    font-size: 28rpx;
    line-height: 30rpx;
    background: #fff;
    border: 1px solid #c8c7cc;
    border-radius: 10rpx;
    margin: auto;
    padding: 30rpx;
}

.bottomView{
    width: 100%;
    height: 100rpx;
    left: 0px;
    bottom: 0px;
    position: fixed;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    box-shadow: 1px 1px 100px rgba(0, 0, 0, 0.3);
}
.money{
    width: 550rpx;
    height: 100%;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 100rpx;
    text-align: center;
}
.submit{
    width: 160rpx;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
    font-size: 28rpx;
    padding: 0px;
    margin: auto;
    background-color: #009FE9;
    display: inline-block;
}
