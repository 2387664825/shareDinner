<form bindsubmit="submit">
<view class='shop-container'>
    <view class='title'>基本信息 ----- {{shop.statusValue}}</view>
    <view class='cell-group'>
        <view class='cell' catchtap='onGoCheliang'>
            <view class='label'>店铺名字：</view>
            <input type='text' placeholder='请输入'  name='name' value='{{ shop.name }}'></input>
        </view>
        <view class='cell'>
            <view class='label'>手机号：</view>
            <input type='text' placeholder='请填写手机号' bindblur="getPhone" name='phoone' type='phone' value="{{shop.phone}}"></input>
        </view>
        <view class='cell' catchtap='onGoWeizhi'>
            <view class='label'>地址：</view>
            <input type='text' placeholder='请选择店铺位置' disabled name='location' value='{{ shop.location }}'></input>
        </view>
        <view class='cell'>
            <view class='label'>家庭人数：</view>
            <input  placeholder='请输入'  type='count' name='familyCount' value='{{shop.familyCount}}'></input>
        </view>
        <!-- <view wx:if="{{ washcarAddress }}" class='cell' catchtap='onGoWeizhi'>
            <view class='label'>详细地址</view>
            <input type='text' placeholder='详细地址' disabled value='{{ washcarAddress }}'></input>
        </view> -->
    </view>
    <view class='picture'>
        <view class='left'>图片：</view>
        <view class='right parcel'>
            <image wx:if="{{shop.imgLocation}}" src="{{shop.imgLocation}}" class="According" mode="aspectFill" bindtap="previewImg"></image>
            <image src="/image/delete.png" class='deleteimg' catchtap="deleteImg" data-index="1" ></image>
            <image wx:if="{{!shop.imgLocation}}" src='/image/add.png' class='add' bindtap='choose' data-index="1"></image>
        </view>
    </view>
    <view class='picture'>
        <view class='left'>健康证：</view>
        <view class='right parcel'>
            <image wx:if="{{shop.jkz}}" src="{{shop.jkz}}" class="According"  mode="aspectFill" bindtap="previewImg"></image>
            <image src="/image/delete.png" class='deleteimg' catchtap="deleteImg" data-index="2"></image>
            <image wx:if="{{!shop.jkz}}" src='/image/add.png' class='add' bindtap='choose'  data-index="2"></image>
        </view>
    </view>
    <view class='title'>简介:</view>
    <view style="padding-bottom:20px;">
        <textarea placeholder="请输入"  bindblur="getBeizhu" value="{{shop.js}}" />
    </view>
    <view class='title' wx:if="{{shop.status == 2}}" style="color:red">未通过原因:</view>
    <view style="padding-bottom:20px;" wx:if="{{shop.status == 2}}">
        <textarea   disabled='true' value="{{shop.because}}" />
    </view>
</view>
<view class='bottomView'>
    <button class='submit' formType="submit">提交</button>
</view>
</form>