@import '/pages/common/common.wxss';
page {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}
.shop {
  display: flex;
  justify-content: space-between;
  margin:15rpx;
  background: #fff;
  border-radius: 15rpx;
  border-bottom: 1rpx solid #eee;
}
.shop-image {
  display: flex;
  width: 150rpx;
  justify-content: center;
}
.shop-image image{
  margin-top: 10rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
}
.right {
  flex: 2;
  padding-right: 30rpx;
  padding-left: 20rpx;
  display: flex;
  flex-wrap:wrap;
}
.right .title {
  font-size: 32rpx;
  width: 60%;
  margin-top: 10rpx;
}
.right .sell-count {
  font-size: 22rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
  width: 40%;
  margin-top: 10rpx;
}
.right .jl {
  font-size: 22rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  margin: 15rpx 0 15rpx 0
}
.right .detail {
  font-size: 28rpx;
  font-weight: 200;
  color: #666;
  padding-bottom: 5rpx;
  overflow:hidden;
}
.detail .space{
  margin-left: 60rpx;
}
.icon {
  flex-direction: column;
  margin-top: 8rpx;
}
.icon image {
  margin: 0 2rpx 0 2rpx;
  width: 35rpx;
  height: 35rpx;  
}