@import '/pages/common/common.wxss';

.food-box{
    padding-bottom: 100rpx;
}
.food-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 120rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.food-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 55rpx;
    width: 45rpx;
    height: 45rpx;
}

.food-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
}
.food-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    line-height: 50rpx;
    overflow: hidden;
}
.food-list .cart-pro-price{
    display: inline-block;
    line-height: 50rpx;
    overflow: hidden;
}
.food-list .cart-count-box{
    position: absolute;
    font-size: 25rpx;
    right: 160rpx;
    bottom: 10rpx;
    width: 120rpx;
    color: #fff;
    background: #009FE9;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    width: 120rpx;
    font-size: 25rpx;
    color: #fff;
    background: #EE7C6B;
}
.food-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #99D1D3;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 20rpx;
    width: 250rpx;
    height: 45rpx;
}
.cart-toatl-price{
    float: right;
    width: 120rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}